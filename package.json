{
  "name": "themeparks-bot",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "precommit": "lint-staged",
    "start": "npm run build && npm run watch",
    "build": "npm run security-check && npm run build-ts && npm run lint-ts",
    "build-ts": "tsc",
    "lint-ts": "tslint -c tslint.json -p tsconfig.lint.json -t stylish --force",
    "watch": "npm-run-all -p watch-ts serve-dev",
    "watch-ts": "tsc -w",
    "serve": "node dist/server.js",
    "serve-dev": "nodemon --inspect=0.0.0.0:9229 dist/server.js",
    "security-check": "nsp check",
    "test": "jest",
    "docker-debug": "docker-compose up"
  },
  "dependencies": {
    "compression": "^1.7.1",
    "debug": "^3.1.0",
    "express": "~4.15.5",
    "helmet": "^3.9.0"
  },
  "devDependencies": {
    "@types/compression": "^0.0.35",
    "@types/debug": "^0.0.30",
    "@types/express": "^4.0.39",
    "@types/helmet": "^0.0.37",
    "@types/jest": "^21.1.5",
    "@types/node": "^8.0.49",
    "husky": "^0.14.3",
    "jest": "^21.2.1",
    "lint-staged": "^4.3.0",
    "nodemon": "^1.12.1",
    "npm-run-all": "^4.1.1",
    "nsp": "^3.1.0",
    "prettier": "^1.7.4",
    "ts-jest": "^21.1.4",
    "tslint": "^5.8.0",
    "tslint-config-prettier": "^1.6.0",
    "tslint-immutable": "^4.4.0",
    "typescript": "^2.6.1"
  },
  "jest": {
    "transform": {
      "^.+\\.ts?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/<rootDir>/src/.*|(\\.|/)spec)\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  },
  "lint-staged": {
    "src/**/*.{js,jsx,json,ts,tsx,css,scss}": [
      "prettier --write",
      "git add"
    ]
  }
}
